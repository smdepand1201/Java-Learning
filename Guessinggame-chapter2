public class SimpleGuessingGame {
    public static void main(String[] args) {
        int targetNumber = (int) (Math.random() * 10) + 1;
        System.out.println("System has chosen a secret number between 1-10!");

        int player1Guess, player2Guess, player3Guess;
        boolean gameWon = false;

        while (!gameWon) {
            // Players make their guesses
            player1Guess = (int) (Math.random() * 10) + 1;
            player2Guess = (int) (Math.random() * 10) + 1;
            player3Guess = (int) (Math.random() * 10) + 1;

            System.out.println("\nPlayer 1 guesses: " + player1Guess);
            System.out.println("Player 2 guesses: " + player2Guess);
            System.out.println("Player 3 guesses: " + player3Guess);

            if (player1Guess == targetNumber) {
                System.out.println("Player 1 wins! 🎉");
                gameWon = true;
            }
            if (player2Guess == targetNumber) {
                System.out.println("Player 2 wins! 🎉");
                gameWon = true;
            }
            if (player3Guess == targetNumber) {
                System.out.println("Player 3 wins! 🎉");
                gameWon = true;
            }

            if (!gameWon) {
                System.out.println("No winners this round... try again! 🔄");
            }
        }
        
        System.out.println("Game over! The secret number was: " + targetNumber);
    }
}
